/******************************************************************************

 Faça um programa que leia dois valores informados pelo usuário e inverta 
 os valores nas variáveis lidas

*******************************************************************************/

#include <stdio.h>
int v1, v2, soma;

int main()
{
    printf("Digite o primeiro valor: ");
    scanf("%d", &v1);
    printf("Digite o segundo valor: ");
    scanf("%d", &v2);
    printf("Primeiro Valor: %d \nSegunda Valor: %d", v1, v2);
    soma = v1 + v2;
    v1 = soma - v1;
    v2 = soma - v1;
    
    printf("\nInvertendo... \nPrimeiro Valor: %d \nSegunda Valor: %d", v1, v2);

    return 0;
}
